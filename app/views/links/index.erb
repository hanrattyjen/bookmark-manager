<h1>My Bookmarks</h1>

<form action="/links/new">
  <input type="submit" value="Create New Bookmark">
</form>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <a href="<%= link.url %>"><%= link.title %></a>
      URL:   <%= link.url %>
      Tags: <% link.tags.each do |tag| %>
        <a href="/tags/<%= tag.name %>"><%= tag.name %></a>
      <% end %>
    </li>
  <% end %>
</ul>

<form action="/sign_up">
  <input type="submit" value="Sign Up">
</form>
